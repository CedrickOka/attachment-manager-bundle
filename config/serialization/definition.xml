<?xml version="1.0" encoding="UTF-8" ?>
<serializer xmlns="http://symfony.com/schema/dic/serializer-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/serializer-mapping https://symfony.com/schema/dic/serializer-mapping/serializer-mapping-1.0.xsd">

    <class name="Oka\AttachmentManagerBundle\Model\AbstractAttachment">
        <attribute name="volumeName" serialized-name="volumeName">
            <group>details</group>
        </attribute>

        <attribute name="filename">
            <group>summary</group>
            <group>details</group>
        </attribute>

        <attribute name="metadata">
            <group>details</group>
        </attribute>

        <attribute name="lastModified" serialized-name="lastModified">
            <group>summary</group>
            <group>details</group>
        </attribute>
    </class>
</serializer>
